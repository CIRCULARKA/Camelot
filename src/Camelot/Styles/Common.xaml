<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style Selector="Button">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <Style Selector="Button.operationButton">
        <Setter Property="Padding" Value="10" />
    </Style>

    <Style Selector="TextBlock.operationTextBlock">
        <Setter Property="FontFamily" Value="SansSerif" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Margin" Value="10,0,0,0" />
    </Style>

    <Style Selector="TextBox">
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style Selector="TextBox.directoryTextBox">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Margin" Value="10,0,0,0" />
    </Style>

    <Style Selector="Button.iconButton">
        <Setter Property="Margin" Value="3" />
    </Style>

    <Style Selector="Button.tabButton">
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style Selector="TextBox.directoryTextBox">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Margin" Value="10,0,0,0" />
    </Style>

    <Style Selector="Rectangle.tabRectangle">
        <Setter Property="Margin" Value="0,5,0,0" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style Selector="MenuItem">
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style Selector="Grid#OverlayGrid">
        <Setter Property="ZIndex" Value="-1" />
        <Setter Property="Background" Value="Black" />
        <Setter Property="Opacity" Value="0.2" />
    </Style>

    <Style Selector="TextBox#DirectoryNameTextBox">
        <Setter Property="Width" Value="300" />
        <Setter Property="Margin" Value="0,20,0,0" />
    </Style>

    <Style Selector="Button.dialogButton">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Margin" Value="20" />
    </Style>

    <Style Selector="TextBlock.dialogTextBlock">
        <Setter Property="FontFamily" Value="SansSerif" />
        <Setter Property="FontSize" Value="20" />
    </Style>
    
    <Style Selector="TextBlock.selectionInfoTextBlock">
        <Setter Property="FontFamily" Value="SansSerif" />
        <Setter Property="FontSize" Value="20" />
    </Style>
    
    <Style Selector="TextBlock.aboutPageTextBlock">
        <Setter Property="FontFamily" Value="SansSerif" />
        <Setter Property="FontSize" Value="16" />
    </Style>
    
    <Style Selector="TextBlock.filePanelTextBlock">
        <Setter Property="FontFamily" Value="SansSerif" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
</Styles>