<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Camelot.ViewModels;assembly=Camelot"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:main="clr-namespace:Camelot.Views.Main"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Camelot.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Camelot">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>


    <StackPanel Orientation="Vertical">
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open..."/>
                    <Separator/>
                    <MenuItem Header="_Exit"/>
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="Copy"/>
                    <MenuItem Header="Paste"/>
                </MenuItem>
            </Menu>
        </DockPanel>

        <main:TopSettingsView />

        <StackPanel Orientation="Horizontal">
            <main:FilesPanelView DataContext="{Binding LeftFilesPanelViewModel}" />
            <main:FilesPanelView DataContext="{Binding RightFilesPanelViewModel}" />
        </StackPanel>

        <main:OperationsView />
    </StackPanel>
</Window>
